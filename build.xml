<project name="DB Copy" default="dist" basedir=".">
    <description>
        Database Copye
    </description>
	  <!-- set global properties for this build -->
	  <property name="src" location="src"/>
	  <property name="build" location="bin"/>
	  <property name="dist" location="dist"/>
	  <property name="resources" location="${src}/resources"/>

	  <target name="init">
	    <!-- Create the time stamp -->
	    <tstamp/>
	    <!-- Create the build directory structure used by compile -->
	    <mkdir dir="${build}"/>
	    <mkdir dir="${dist}"/>
	    <mkdir dir="${dist}/lib/complete"/>
	  </target>

	  <target name="clean" depends="init" description="clean up">
	    <!-- Create the build directory structure used by compile -->
	  	<delete dir="${build}"/>
	  	<delete dir="${dist}"/>
	    <delete dir="${dist}/lib/complete"/>
	    <mkdir dir="${build}"/>
	    <mkdir dir="${dist}"/>
	    <mkdir dir="${dist}/lib/complete"/>
	  </target>

  <target name="compile" depends="init" description="compile the source ">
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}" source="1.8" target="1.8"/>
  </target>

  <target name="dist" depends="clean,compile" description="generate the distribution" >
  	<copy todir="${build}">
  		<fileset dir="${src}">
  			<include name="**/*.fxml"/><!-- ** als Pfad heiÃŸt: durchsuche den ganzen Dateibaum (ab dir="...") -->
  		</fileset>
  	</copy>
 	<copy todir="${build}/resources">
  		<fileset dir="${resources}"/>
  	</copy>
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/complete/dbcopy.jar" basedir="${build}">
    	<manifest>
    		<attribute name= "Creation Time" value="${DSTAMP}"/>
    		<attribute name="Main-Class" value="de.nrw.lichtenau.ian.db_copy.Launch"/>
    	</manifest>
   	</jar>
  	
    <zip destfile="${dist}/DB_Copy.zip"
         basedir="${dist}/lib"
         update="true"
    />
  	
  	
  </target>
</project>

